{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2017", "DOM"],
    "module": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "dataset-adapters/*": ["src/lib/dataset-adapters/*"],
      "experiments/*": ["src/lib/experiments/*"],
      "experiments": ["src/lib/experiments"],
      "evaluation": ["src/lib/evaluation"],
      "evaluation/*": ["src/lib/evaluation/*"],
      "models/*": ["src/lib/models/*"],
      "models": ["src/lib/models"]
    },
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
